class Patient():

    #attributes / qualities: variables
    #behavior / what the class does: function
    
    def __init__(self, patient_id, name, disease, age, gender):
        self.patient_id = patient_id
        self.name = name
        self.disease = disease
        self.age = age
        self.gender = gender
        
        
patient1 = Patient(111, 'Hammad', 'injured', 21, 'male')
patient2 = Patient(222, 'AlexBhatti', 'TB', 34, 'bisexual')
patient1.age
21
patient2.gender
'bisexual'
patient2.patient_id
222
class Student():
    def __init__(self, idnumber, name, gender, age, classes, bloodgroup):
        self.idnumber = idnumber
        self.gender = gender
        self.name = name
        self.age = age
        self.classes = classes
        self.bloodgroup = bloodgroup
std1 = Student(1101, 'Wafa', 'female', 20, 'biology', 'o+ve')
std1.name
'Wafa'
 
